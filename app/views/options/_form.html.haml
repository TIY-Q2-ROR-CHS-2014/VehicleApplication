= form_for @option do |f|
  - if @option.errors.any?
    #error_explanation
      %h2= "#{pluralize(@option.errors.count, "error")} prohibited this option from being saved:"
      %ul
        - @option.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :option_type
    = f.select :option_type, options_for_select(Option::OPTION_TYPES, @option.option_type), include_blank: "--- Select ---"
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :markup
    = f.text_field :markup
  .actions
    = f.submit 'Save', class: "btn btn-default"
